<%= simple_form_for @scooter do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :status, collection: ['Available', 'Unavailable']  %>
  <%= f.input :location, html_options: { id: 'scooter_location' } %>
  <%= f.input :photo %>
  <%= f.input :price %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
