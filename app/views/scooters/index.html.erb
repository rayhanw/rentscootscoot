<div class="container index-list">
  <h2 class="list-title">Scooter List</h2>
  <% if policy(Scooter).new? %>
    <%= link_to 'Add a Scooter', new_scooter_path, class: 'btn sign-up' %>
  <% end %>
  <div class="scooters">
    <div
      id="all-map"
      class="mt-3"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
    <div class="row my-5">
      <% @scooters.each do |scooter| %>
        <div class="card" style="width: 18rem;">
          <%= cl_image_tag scooter.photo, alt: scooter.name, class: 'card-img-top', width: 400, height: 200 %>
          <div class="card-body">
            <h5 class="card-title"><%= scooter.name %></h5>
            <p class="card-text description"><%= scooter.description %></p>
            <p><strong>Rp <%= scooter.price %></strong></p>
          </div>
          <div class="card-actions">
            <%= link_to "More info", scooter_path(scooter), class: 'action text-primary'  %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
